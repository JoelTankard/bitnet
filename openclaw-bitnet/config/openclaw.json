{
  "$schema": "https://openclaw.ai/schemas/config.json",
  "version": "1.0",

  "agent": {
    "model": "bitnet/bitnet-b1.58-2b",
    "systemPrompt": "You are a helpful personal AI assistant powered by BitNet, a highly efficient 1-bit language model. You assist users with tasks, answer questions, and help with daily workflows. Be concise, accurate, and helpful.",
    "temperature": 0.7,
    "maxTokens": 2048
  },

  "providers": {
    "bitnet": {
      "type": "openai-compatible",
      "baseUrl": "http://bitnet-server:8080",
      "apiKey": "not-required",
      "models": {
        "bitnet-b1.58-2b": {
          "id": "bitnet-b1.58-2b",
          "name": "BitNet b1.58 2B",
          "contextLength": 4096,
          "pricing": {
            "input": 0,
            "output": 0
          }
        },
        "bitnet-b1.58-3b": {
          "id": "bitnet-b1.58-3b",
          "name": "BitNet b1.58 3B",
          "contextLength": 4096,
          "pricing": {
            "input": 0,
            "output": 0
          }
        },
        "bitnet-llama3-8b": {
          "id": "bitnet-llama3-8b",
          "name": "Llama3 8B 1.58-bit",
          "contextLength": 8192,
          "pricing": {
            "input": 0,
            "output": 0
          }
        }
      }
    }
  },

  "gateway": {
    "port": 18789,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:*"]
    }
  },

  "security": {
    "pairingMode": "dm",
    "sandbox": {
      "mode": "docker",
      "enabled": true
    }
  },

  "channels": {
    "webchat": {
      "enabled": true
    }
  },

  "logging": {
    "level": "info",
    "format": "json"
  }
}
